{
  "name": "@r2d2bzh/moleculer-test-utils",
  "version": "1.0.0",
  "description": "Some useful functions for moleculer unit testing",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "pretest": "npm install",
    "lint": "eslint .",
    "test": "docker compose run test",
    "test:docker": "c8 ava",
    "release": "release-it"
  },
  "author": "r2d2bzh",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "moleculer": "^0.14.35",
    "mongodb": "^6.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@r2d2bzh/js-rules": "^1.0.6",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "release-it": "^19.1.0"
  },
  "c8": {
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "all": true,
    "allowExternal": true,
    "src": [
      "./lib"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
